@using System.Web.Mvc.Html
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title>@RenderSection("title", false)</title>
    <link href="@Url.Content("~/Content/ManageSite.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/HtmlEditor/tiny_mce/jquery.tinymce.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/HtmlEditor/tiny_mce/tiny_mce.js")"></script>
    @RenderSection("head", false)
</head>
<body>
    <div id="canvas">
        <div class="page">
            <div id="header" class="clearfix">
                <div id="title">
                    <h1><a href="@Url.Content("~/")"><img src="@Url.Content("~/Content/Canvas/Logo.gif")" alt="Digital Evolution Group - Site Management System 4.0" width="450" height="34" /></a></h1>
                </div>
              
                <div id="topmenucontainer">
			        @{Html.RenderAction("IconMenu", "MenuSystem");}
                </div>

                <div id="current-user">
				    @RenderSection("currentUser", false) 
                </div>
                @{Html.RenderAction("SectionMenu", "MenuSystem");}
                @{Html.RenderAction("SubMenu", "MenuSystem");}
            </div>
            <div id="main">
                @RenderBody()
                <div id="footer">
                @RenderSection("footer", false)
                </div>
            </div>
        </div>
    </div>
    @RenderSection("AdditionalScripts", false)

    <script type="text/javascript">
        $(document).ready(function() {
            $('textarea.htmlEditor').tinymce({
                // Location of TinyMCE script
                script_url: '/Scripts/HtmlEditor/tiny_mce/tiny_mce.js',
                // General options
                theme: "advanced",
                plugins: "filemanager",
                theme_advanced_toolbar_location: "top",
                theme_advanced_toolbar_align: "left",
                theme_advanced_statusbar_location: "bottom",
                theme_advanced_resizing: true,
                relative_urls: false,
                document_base_url: "",
            });
        });
    </script>
</body>
</html>
